{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./build",
		"module": "commonjs",
		"target": "es2020",
		"strict": true,
		"declaration": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"types": ["node"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["**/node_modules", "**/build", "**/coverage", "**/*.old"]
}